@model PictureAddFormModel
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc.ModelBinding;


@{
    ViewBag.Title = "Add Picture";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-black" role="alert">
        @TempData["Success"]
    </div>
}
@{
    var errors = ViewData.ModelState.Where(n => n.Value.Errors.Count > 0).ToList();
}

@if (errors.Count > 0)
{

    @foreach (var error in errors)
    {
        foreach (var errorMessage in error.Value.Errors)
        {
            <div class="alert alert-danger bg-dark text-white" role="alert">
                @errorMessage.ErrorMessage
            </div>
        }
    }

}
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <div class="mb-3 text-center">
            @using (Html.BeginForm("Upload", "Picture", FormMethod.Post, new { enctype = "multipart/form-data", style = "display: inline-block; flex-direction: column; align-items: center;" }))
            {
                <div class="row">
                    <div class="col-md-8">
                        <div class="mb-3 pt-3 pb-3">
                            <label asp-for="@Model.Description" class="form-label-add-edit" style="font-size: 20px;">Description</label>
                            <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="15"></textarea>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3 pt-3 pb-3">
                            <input class="form-control mb-2" type="file" name="file" id="file" style="width: 180%" />
                            <input type="submit" class="form-control" value="Save" />
                        </div>
                    </div>
                </div>
                <div>
                    @for (int i = 0; i < Model.HashTags.Count(); i++)
                    {
                        @Html.HiddenFor(m => m.HashTags[i].Id)
                        @Html.HiddenFor(m => m.HashTags[i].Name)
                        <div class="form-check">
                            @Html.CheckBoxFor(m => m.HashTags[i].IsSelected, new { @class = "form-check-input", id = $"HashTags_{i}__IsSelected" })
                            <label class="form-check-label" for="@($"HashTags_{i}__IsSelected")">@Model.HashTags[i].Name</label>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
<span asp-validation-for="@Model.HashTags" class="text-danger"></span>

