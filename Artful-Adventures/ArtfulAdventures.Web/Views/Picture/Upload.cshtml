@model PictureAddFormModel
@using Microsoft.AspNetCore.Http
<link rel="stylesheet" href="https://cdn.rawgit.com/bantikyan/icheck-bootstrap/master/icheck-bootstrap.min.css">

@{
    ViewBag.Title = "Add Picture";
}

@{
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">

            <div class="mb-3">
                @using (Html.BeginForm("Upload", "Picture", FormMethod.Post, new { enctype = "multipart/form-data", style = "display: inline-block; flex-direction: column; align-items: center;" }))
                {
                    <div>
                        <input class="btn btn-primary" type="file" name="file" id="file" style="background:none; border: none;" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                        <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.HashTags" class="form-label-add-edit">Medium </label>
                    </div>
                    <form asp-formethod="post">
                        @for (int i = 0; i < Model.HashTags.Count(); i++)
                        {
                            <div class="checkbox icheck-turquoise form-check-inline">
                                @Html.HiddenFor(m => m.HashTags[i].Id)
                                @Html.CheckBoxFor(m => m.HashTags[i].IsSelected)
                                @Html.LabelFor(m => m.HashTags[i].IsSelected, 
                                    string.Join(" ", Model.HashTags[i].Name.Split('_')),
                                    new { @class = "pl-0", style = "padding-left: 0!important;" })
                            </div>
                        }
                        <div class="mb-3">
                            <button type="submit">Save</button>
                        </div>
                    </form>

                    <span asp-validation-for="@Model.HashTags" class="text-danger"></span>
                }
            </div>
        </div>
    </div>
}
