@model PortfolioViewModel

@{
    ViewBag.Title = "Portfolio";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-danger bg-dark text-white" role="alert">
        @TempData["Message"]
    </div>

}
<div class="d-flex justify-content-center align-items-center">
    <div class="card mb-4" style="background: radial-gradient(circle at 10% 20%, rgba(218, 203, 246,0.3) 10%, rgba(192, 192, 245,0.1) 33.1%, rgba(218, 203, 246,0.5) 90%);border-color:rgb(218, 203, 246); width:50%;">
        <div class="card-body text-center">
            <h5 class="mb-1" style="color:rgb(218, 203, 246);">Portfolio</h5>
        </div>
    </div>
</div>
<section>
    <div class="container py-3">
        <div class="row">
            <div class="col-lg-13">
                <div class="card mb-4" style="background: radial-gradient(circle at 10% 20%, rgba(218, 203, 246,0.3) 10%, rgba(192, 192, 245,0.1) 33.1%, rgba(218, 203, 246,0.5) 90%);border-color:rgb(218, 203, 246)">
                    <div class="card-body">
                        @if (Model.Pictures != null && Model.Pictures.Count > 0)
                        {
                            <div style="display: flex; flex-wrap: wrap;">
                                @foreach (var picture in Model.Pictures)
                                {
                                    <div style="flex-basis: 20%; padding: 5px; max-height: 100%;">
                                        <div style="width: 200px; height: 200px; overflow: hidden;">
                                            <img src="~/images/@picture.PictureUrl" alt=" "
                                                 class="block" style="width: 100%; height: 100%; object-fit: cover; border: 1px solid black">
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
