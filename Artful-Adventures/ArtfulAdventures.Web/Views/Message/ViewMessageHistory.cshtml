@model MessageInboxViewModel

<h2>Message</h2>

@{
    ViewBag.Title = "Message History";
}

<div>
    <label>Sender:</label>
    @Model.Sender
</div>

<div>
    <label>Subject:</label>
    @Model.Subject
</div>

<div>
    <label>Content:</label>
    @Model.Content
</div>

<div>
    <label>Timestamp:</label>
    @Model.Timestamp
</div>

<a href="@Url.Action("Reply", "Message", new { id = Model.Id })">Reply</a>

<h3>Message History</h3>

<style>
    .inbox-table td, th {
        color: #bcd0f7;
    }
</style>

<table class="table inbox-table">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Subject</th>
            <th>Content</th>
            <th>Read</th>
            <th>Timestamp</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model.MessagesHistory)
        {
            <tr>
                <td>@message.Sender</td>
                <td>@message.Subject</td>
                <td>@message.Content</td>
                <td>@(message.IsRead ? "Yes" : "No")</td>
                <td>@message.Timestamp</td>
                <td><a href="@Url.Action("ViewMessage", "Message", new { id = message.Id })">View</a></td>
            </tr>
        }
    </tbody>
</table>